{
  "version": 2,
  "builds": [
    {
      "src": "./server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "BUN_INSTALL": "1",
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "BUN_INSTALL": "1"
    }
  },
  "functions": {
    "*/**/*.js": {
      "runtime": "bun"
    }
  }
}
