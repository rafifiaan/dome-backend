{
  "version": 2,
  "builds": [
    {
      "src": "./server.js",
      "use": "@vercel/node"
    }
  ],
  "installCommand": "bun install",
  "start": "bun run server.js",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "BUN_INSTALL": "1"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
